{
  "name": "Intern",
  "type": "object",
  "properties": {
    "full_name": {
      "type": "string",
      "description": "Intern's full name"
    },
    "avatar_url": {
      "type": "string",
      "description": "Profile picture URL or emoji"
    },
    "points": {
      "type": "number",
      "default": 0,
      "description": "Gamification points earned"
    },
    "level": {
      "type": "string",
      "enum": [
        "Novice",
        "Apprentice",
        "Journeyman",
        "Expert",
        "Master"
      ],
      "default": "Novice"
    },
    "status": {
      "type": "string",
      "enum": [
        "active",
        "paused",
        "completed"
      ],
      "default": "active",
      "description": "Intern's current status - active, paused by manager, or completed"
    },
    "well_being_status": {
      "type": "string",
      "enum": [
        "Excellent",
        "Good",
        "Fair",
        "Neutral",
        "Stressed",
        "Poor",
        "Overwhelmed"
      ],
      "description": "Latest emotional well-being check-in"
    },
    "performance_history": {
      "type": "array",
      "description": "Monthly performance scores",
      "items": {
        "type": "object",
        "properties": {
          "month": {
            "type": "string"
          },
          "score": {
            "type": "number"
          }
        }
      }
    },
    "skills": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Technical skills"
    },
    "track": {
      "type": "string",
      "description": "Primary learning focus (e.g., Power BI, AI + Python)"
    },
    "avg_score_pct": {
      "type": "number",
      "description": "Average score percentage"
    },
    "start_date": {
      "type": "string",
      "format": "date"
    }
  },
  "required": [
    "full_name"
  ]
}