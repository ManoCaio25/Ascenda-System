{
  "name": "Badge",
  "type": "object",
  "properties": {
    "intern_id": {
      "type": "string",
      "description": "ID of the intern who earned this badge"
    },
    "name": {
      "type": "string",
      "enum": [
        "Perfect Score",
        "Fast Learner",
        "Streak Master",
        "Top Performer"
      ],
      "description": "Badge name"
    },
    "description": {
      "type": "string",
      "description": "What the badge represents"
    },
    "achieved_at": {
      "type": "string",
      "format": "date-time",
      "description": "When the badge was earned"
    }
  },
  "required": [
    "intern_id",
    "name",
    "description"
  ]
}