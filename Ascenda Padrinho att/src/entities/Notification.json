{
  "name": "Notification",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "enum": [
        "course_published",
        "course_assigned",
        "chat_message",
        "vacation_requested",
        "vacation_status_changed"
      ],
      "description": "Type of notification"
    },
    "title": {
      "type": "string",
      "description": "Notification title"
    },
    "body": {
      "type": "string",
      "description": "Notification body text"
    },
    "actor_name": {
      "type": "string",
      "description": "Name of person who triggered the notification"
    },
    "target_id": {
      "type": "string",
      "description": "ID of related entity (course, intern, request)"
    },
    "target_kind": {
      "type": "string",
      "enum": [
        "course",
        "intern",
        "request"
      ],
      "description": "Type of target entity"
    },
    "read": {
      "type": "boolean",
      "default": false,
      "description": "Whether notification has been read"
    }
  },
  "required": [
    "type",
    "title"
  ]
}