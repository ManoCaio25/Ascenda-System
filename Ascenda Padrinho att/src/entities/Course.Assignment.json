{
  "name": "CourseAssignment",
  "type": "object",
  "properties": {
    "course_id": {
      "type": "string",
      "description": "ID of the course being assigned"
    },
    "intern_id": {
      "type": "string",
      "description": "ID of the intern receiving the assignment"
    },
    "assigned_by": {
      "type": "string",
      "description": "Email of the manager who assigned it"
    },
    "status": {
      "type": "string",
      "enum": [
        "assigned",
        "in_progress",
        "completed",
        "cancelled"
      ],
      "default": "assigned",
      "description": "Assignment status"
    },
    "progress": {
      "type": "number",
      "default": 0,
      "description": "Completion percentage 0-100"
    },
    "assigned_date": {
      "type": "string",
      "format": "date-time",
      "description": "When the course was assigned"
    },
    "started_date": {
      "type": "string",
      "format": "date-time",
      "description": "When intern started the course"
    },
    "completed_date": {
      "type": "string",
      "format": "date-time",
      "description": "When intern completed the course"
    },
    "due_date": {
      "type": "string",
      "format": "date",
      "description": "Optional deadline for completion"
    },
    "notes": {
      "type": "string",
      "description": "Manager's notes about this assignment"
    }
  },
  "required": [
    "course_id",
    "intern_id"
  ]
}