{
  "name": "Task",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "description": "Task title"
    },
    "description": {
      "type": "string",
      "description": "Task details"
    },
    "assigned_to": {
      "type": "string",
      "description": "Intern ID this task is assigned to"
    },
    "status": {
      "type": "string",
      "enum": [
        "pending",
        "in_progress",
        "completed",
        "overdue"
      ],
      "default": "pending"
    },
    "priority": {
      "type": "string",
      "enum": [
        "low",
        "medium",
        "high",
        "urgent"
      ],
      "default": "medium"
    },
    "deadline": {
      "type": "string",
      "format": "date"
    },
    "points_reward": {
      "type": "number",
      "default": 10,
      "description": "Points earned upon completion"
    },
    "completed_date": {
      "type": "string",
      "format": "date"
    }
  },
  "required": [
    "title",
    "assigned_to"
  ]
}